<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.DarkFoyerController"
            prefWidth="1092" prefHeight="680">

    <children>
        <!-- Background artwork sized to your provided dimensions -->
        <ImageView pickOnBounds="true" preserveRatio="false"
                   fitWidth="1092" fitHeight="680"
                   AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <image>
                <Image url="@images/Dark Foyer Screen.png"/>
            </image>
        </ImageView>

        <!-- Door hotspots (left-to-right). Tune anchors if you need pixel-perfect alignment. -->
        <Button fx:id="door1" onAction="#openWitchesDen"
                prefWidth="160" prefHeight="260"
                AnchorPane.leftAnchor="240.0" AnchorPane.topAnchor="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />

        <Button fx:id="door2" onAction="#openCursedRoom"
                prefWidth="160" prefHeight="260"
                AnchorPane.leftAnchor="460.0" AnchorPane.topAnchor="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />

        <Button fx:id="door3" onAction="#openLockedDoor"
                prefWidth="160" prefHeight="260"
                AnchorPane.leftAnchor="680.0" AnchorPane.topAnchor="200.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />

        <Button fx:id="door4" onAction="#openHallOfDoorsPart1"
                prefWidth="90" prefHeight="240"
                AnchorPane.leftAnchor="980.0" AnchorPane.topAnchor="230.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />

        <!-- Backpack icon hotspot (top-right, below gear) -->
        <Button fx:id="backpack" onAction="#openBackpack"
                prefWidth="70" prefHeight="88"
                AnchorPane.rightAnchor="18.0" AnchorPane.topAnchor="100.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />

        <!-- Settings gear hotspot (top-most right) -->
        <Button fx:id="settings" onAction="#openSettings"
                prefWidth="92" prefHeight="82"
                AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />

        <!-- Help / question-mark hotspot (bottom-right corner) -->
        <Button fx:id="help" onAction="#openHelp"
                prefWidth="110" prefHeight="130"
                AnchorPane.rightAnchor="18.0" AnchorPane.bottomAnchor="18.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />
        
        <Button text="Back" fx:id="backButton" onAction="#switchToHome"
                prefWidth="160" prefHeight="44"
                style="-fx-background-color: white; -fx-border-color: transparent; -fx-cursor: hand;"
                AnchorPane.leftAnchor="466.0" AnchorPane.bottomAnchor="36.0" />
    </children>
</AnchorPane>

