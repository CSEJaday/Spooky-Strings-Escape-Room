<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.SettingsController"
            prefWidth="1092" prefHeight="680">
    <children>
        <ImageView pickOnBounds="true" preserveRatio="false"
                   fitWidth="1092" fitHeight="680"
                   AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@images/Settings.png"/>
            </image>
        </ImageView>

        <!-- These buttons will lay on top of the drawn ones in the image -->
        <Button onAction="#logout"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;"
                prefWidth="160" prefHeight="35"
                AnchorPane.leftAnchor="472.0" AnchorPane.topAnchor="180.0" />

        <Button onAction="#back"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;"
                prefWidth="160" prefHeight="35"
                AnchorPane.leftAnchor="472.0" AnchorPane.bottomAnchor="250.0" />
    </children>
</AnchorPane>

