<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane fx:id="root"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.CabinetController"
            prefWidth="1092" prefHeight="680">

    <!-- Background image is set by the controller at runtime -->
    <ImageView fx:id="backgroundImage"
               pickOnBounds="true"
               preserveRatio="false"
               fitWidth="1092" fitHeight="680"
               AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"/>

    <!-- transparent settings button (top-right) -->
    <Button fx:id="settingsButton"
            layoutX="1010.0" layoutY="20.0"
            prefWidth="56" prefHeight="56"
            onAction="#onSettings"
            style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;">
        <tooltip>
            <Tooltip text="Settings"/>
        </tooltip>
    </Button>

    <!-- transparent inventory/backpack button (below settings) -->
    <Button fx:id="inventoryButton"
            layoutX="1010.0" layoutY="100.0"
            prefWidth="48" prefHeight="48"
            onAction="#onInventory"
            style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;">
        <tooltip>
            <Tooltip text="Inventory"/>
        </tooltip>
    </Button>

    <!-- transparent back button (bottom middle) -->
    <Button fx:id="backButton"
            layoutX="520.0" layoutY="610.0"
            prefWidth="56" prefHeight="56"
            onAction="#onBack"
            style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;">
        <tooltip>
            <Tooltip text="Back"/>
        </tooltip>
    </Button>

</AnchorPane>



