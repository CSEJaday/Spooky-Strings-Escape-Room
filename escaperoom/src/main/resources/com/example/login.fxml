<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.LoginController"
            prefWidth="1100" prefHeight="900">

    <!-- Full-window background image -->
    <children>
        <ImageView pickOnBounds="true" preserveRatio="false"
                   fitWidth="1100" fitHeight="900"
                   AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <image>
                <Image url="@images/UsernameScreen.png"/>
            </image>
        </ImageView>

        <!-- Centered overlay grid: this keeps fields aligned with the artwork area -->
        <!-- Adjust left/right/top/bottom anchors to move the overlay box relative to your art -->
        <GridPane fx:id="formGrid" hgap="16" vgap="46"
                  AnchorPane.leftAnchor="170.0" AnchorPane.rightAnchor="290.0"
                  AnchorPane.topAnchor="90.0">
            <!-- Two columns: left for spacing (empty), right contains the text fields aligned to drawn boxes -->
            <columnConstraints>
                <ColumnConstraints percentWidth="60"/>
                <ColumnConstraints percentWidth="40"/>
            </columnConstraints>

            <!-- Row 0: blank left column (art has label), right column contains username field -->
            <children>
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           prefHeight="50" prefWidth="420"
                           style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 18px; -fx-text-fill: black;" />

                <!-- Row 1: password field -->
                <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           prefHeight="50" prefWidth="420"
                           style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 18px; -fx-text-fill: black;" />

                <!-- Spacer row 2 (keeps visual separation) -->
            </children>
        </GridPane>

        <!-- Invisible overlay buttons positioned under the overlay area.
             Using left & right anchors to center each button under the drawn buttons on the art. -->
        <HBox spacing="78"
              AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="340.0"
              AnchorPane.topAnchor="388.0" alignment="CENTER">
            <!-- Back button (transparent so drawn art button remains visible) -->
            <Button fx:id="loginPageHomeButton" onAction="#switchToHome"
                    prefWidth="220" prefHeight="48"
                    style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />
            <!-- Login button -->
            <Button fx:id="loginPageLoginButton" onAction="#switchToDifficulty"
                    prefWidth="220" prefHeight="48"
                    style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" />
        </HBox>
    </children>
</AnchorPane>





